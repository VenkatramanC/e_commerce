<div class="row">
  <div class="col-md-6">
    <%= image_tag "book.png" %>
  </div>
  <div class="col-md-6">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Name:</strong>
      <%= @book.name %>
      by 
      <%= @book.author %>
    </p>

    
     
    

    <p>
      <strong>Description:</strong>
      <%= @book.description %>
    </p>

    <p>
      <strong>Price:</strong>Rs
      <%= @book.price %> /-
    </p>

    <p>
      <strong>Availability:</strong>
      <%= @book.availability %>
    </p>
  </div>
</div>

<%= link_to 'Edit', edit_book_path(@book) %> |
